{
  "compilerOptions": {
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "include": ["src", "../global/interfaces.ts", "../interfaces.ts"],
  "exclude": ["node_modules"]
}
