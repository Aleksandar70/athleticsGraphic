{
  "compilerOptions": {
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
