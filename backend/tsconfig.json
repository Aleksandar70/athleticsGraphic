{
  "compilerOptions": {
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "include": ["src/app.ts"],
  // TODO - remove "src/api/openTrack.ts" from excluded after all its variables are used
  "exclude": ["node_modules", "src/api/*", "src/database/*"]
}
